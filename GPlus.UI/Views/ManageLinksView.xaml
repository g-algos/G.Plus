<Window x:Class="GPlus.UI.Views.ManageLinksView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GPlus.UI.Views"  
        xmlns:converters="clr-namespace:G.wpf.Converters;assembly=G.wpf"  
        xmlns:viewModels="clr-namespace:GPlus.UI.ViewsModels"  
        xmlns:contents="clr-namespace:GPlus.Base.Resources.Localizations;assembly=GPlus.Base"  
        xmlns:commands="clr-namespace:G.wpf.Commands;assembly=G.wpf"
        mc:Ignorable="d"
        Title="{x:Static contents:Content.ManageDataLinks}" Height="450" Width="800" ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/G.wpf;component/Themes/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <converters:NullToBoolConverter x:Key="NullToBoolConverter" />
            <converters:DateTimeToStringConverter x:Key="DateTimeToStringConverter" />
            <converters:BoolToImageConverter x:Key="BoolToImageConverter" />
        </ResourceDictionary>
    </Window.Resources>
    <Grid Margin="{StaticResource PaddingDefault}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Column="0" Margin="{StaticResource PaddingSM}">
        <Label Content="{x:Static contents:Content.DataLink}" Style="{StaticResource LabelMedium}" Grid.Row="0"/>
        <TextBox x:Name="SeachBox" Grid.Row="1" Width="400"
                 Style="{StaticResource GSearchTextBox}"
                 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                 ToolTip="{x:Static contents:Content.SearchLink}"
                 Margin="{StaticResource PaddingHorizontal}"/>
        </StackPanel>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <!-- Data Grid -->
            <DataGrid   Style="{StaticResource GStaticDataGrid}" Grid.Column="0"
                        x:Name ="LocalizationItems"  
                        ItemsSource="{Binding Links}"  
                        VerticalScrollBarVisibility="Auto"
                        HorizontalScrollBarVisibility="Hidden"
                        ScrollViewer.CanContentScroll="True"
                        Margin="{StaticResource PaddingXS}"
                        Background="{StaticResource GreyBrush}"
                        SelectedItem="{Binding SelectedLink, Mode=TwoWay}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="{x:Static contents:Content.Schedule}" Width="*" Binding="{Binding Schedule.Name}" IsReadOnly="True"/>
                    <DataGridTextColumn Header="{x:Static contents:Content.Type}" Width="Auto" Binding="{Binding LinkType}" IsReadOnly="True"/>
                    <DataGridTextColumn Header="{x:Static contents:Content.Path}" Width="*" Binding="{Binding Path}" IsReadOnly="True"/>
                    <DataGridTextColumn Header="{x:Static contents:Content.PathType}" Width="Auto" Binding="{Binding PathType}" IsReadOnly="True"/>
                    <DataGridTemplateColumn Header="{x:Static contents:Content.Status}" Width="Auto">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Image Width="15" Height="15"
                                        Source="{Binding Status, Converter={StaticResource BoolToImageConverter}}"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="{x:Static contents:Content.LastSync}" Width="Auto" Binding="{Binding LastSync, Converter={StaticResource DateTimeToStringConverter}}" />
                </DataGrid.Columns>
            </DataGrid>
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Margin="{StaticResource PaddingXS}" Orientation="Vertical">
                    <Button Name="pull" Style="{StaticResource SecondaryButtonSM}" Margin="{StaticResource PaddingXS}"
                            Command="{Binding PullCommand}"
                            ToolTip="{x:Static contents:Content.Pull}"
                            IsEnabled="{Binding SelectedLink, Converter={StaticResource NullToBoolConverter}}">
                        <Image Source="{StaticResource Pull24}" Width="16" Height="16"/>
                    </Button>
                    <Button Name="push" Style="{StaticResource SecondaryButtonSM}" Margin="{StaticResource PaddingXS}" 
                            Command="{Binding PushCommand}" 
                            ToolTip="{x:Static contents:Content.Push}"
                            IsEnabled="{Binding SelectedLink, Converter={StaticResource NullToBoolConverter}}">
                    <Image Source="{StaticResource Push24}" Width="16" Height="16"/>
                </Button>
                    <Button Name="sync" Style="{StaticResource SecondaryButtonSM}" Margin="{StaticResource PaddingXS}"  
                            Command="{Binding SyncCommand}"  
                            ToolTip="{x:Static contents:Content.Sync}"
                            IsEnabled="{Binding SelectedLink, Converter={StaticResource NullToBoolConverter}}">
                    <Image Source="{StaticResource Sync24}" Width="16" Height="16"/>
                </Button>
                    <Button Name="open" Style="{StaticResource SecondaryButtonSM}" Margin="{StaticResource PaddingXS}"  
                            Command="{Binding OpenCommand}"  
                            ToolTip="{x:Static contents:Content.Compare}"
                            IsEnabled="{Binding SelectedLink, Converter={StaticResource NullToBoolConverter}}">
                    <Image Source="{StaticResource Open24}" Width="16" Height="16"/>
                </Button>
            </StackPanel>
                <StackPanel Grid.Row="2" Margin="{StaticResource PaddingXS}" Orientation="Vertical">
                    <Button Name="add" Style="{StaticResource PrimaryButton}" Margin="{StaticResource PaddingXS}" Command="{Binding AddLinkCommand}" ToolTip="{x:Static contents:Content.Add}"
                              IsEnabled="{Binding HasLinksToAdd}">
                        <Image Source="{StaticResource Add24Y}" Width="22" Height="22"/>
                    </Button>
                    <Button Name="remove" Style="{StaticResource PrimaryButton}" Margin="{StaticResource PaddingXS}"  Command="{Binding RemoveLinkCommand}" ToolTip="{x:Static contents:Content.Remove}"
                            IsEnabled="{Binding SelectedLink, Converter={StaticResource NullToBoolConverter}}">
                        <Image Source="{StaticResource Remove24Y}" Width="20" Height="22"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Grid>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" VerticalAlignment="Center">
                <Hyperlink Style="{StaticResource LinkLarge}"
                    Command="{x:Static commands:GlobalCommands.OpenUriCommand}" 
                    CommandParameter="http://g-algos.com/G.plus/DataLinks/">
                    Learn more
                </Hyperlink>
            </TextBlock>

        </Grid>
    </Grid>
</Window>